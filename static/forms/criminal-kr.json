        "options": [
          "예",
          "아니오"
        ]
      },
      {
        "id": "referral_source",
        "label": "저희를 어떻게 알게 되셨습니까?",
        "type": "radio",
        "options": [
          "구글",
          "소셜 미디어",
          "가족이나 친구 소개",
          "기타"
        ]
      },
      {
        "id": "additional_comments",
        "label": "추가로 남기고 싶은 말씀이 있으신가요?",
        "type": "textarea"
      }
    ]
