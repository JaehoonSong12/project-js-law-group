{
    "form_title": "개인 상해 사건 접수",
    "contact_email": "info@jslawgroup.net",
    "fields": [
      {
        "id": "full_name",
        "label": "이름",
        "type": "text",
        "required": true
      },
      {
        "id": "phone_number",
        "label": "전화번호",
        "type": "tel",
        "required": true
      },
      {
        "id": "email_address",
        "label": "이메일 주소",
        "type": "email",
        "required": true
      },
      {
        "id": "preferred_contact_method",
        "label": "선호하는 연락 방식",
        "type": "radio",
        "options": [
          "전화",
          "문자",
          "이메일"
        ]
      },
      {
        "id": "date_of_incident",
        "label": "사고 발생일",
        "type": "date",
        "required": true
      },
      {
        "id": "incident_type",
        "label": "어떤 종류의 사고였나요?",
        "type": "radio",
        "options": [
          "자동차 사고",
          "미끄러짐/넘어짐 사고",
          "트럭 사고",
          "개물림 사고",
          "기타"
        ]
      },
      {
        "id": "incident_description",
        "label": "사고 상황을 간략히 설명해주세요",
        "type": "textarea"
      },
      {
        "id": "medical_visit",
        "label": "병원이나 응급실(ER)에 가셨나요?",
        "type": "radio",
        "options": [
          "네",
          "아니오"
        ]
      },
      {
        "id": "medical_facility_name",
        "label": "방문한 병원 또는 클리닉 이름",
        "type": "text",
        "conditional_on": "medical_visit"
      },
      {
        "id": "injury_details",
        "label": "어떤 부상을 입으셨나요?",
        "type": "textarea"
      },
      {
        "id": "ongoing_treatment",
        "label": "현재도 치료 중인가요?",
        "type": "radio",
        "options": [
          "네",
          "아니오"
        ]
      },
      {
        "id": "has_auto_insurance",
        "label": "자동차 보험이 있으신가요?",
        "type": "radio",
        "options": [
          "네",
          "아니요"
        ]
      },
      {
        "id": "auto_claim_number",
        "label": "클레임 번호",
        "type": "text",
        "conditional_on": "has_auto_insurance"
      },
      {
        "id": "police_responded",
        "label": "경찰이 사고 현장에 왔나요?",
        "type": "radio",
        "options": [
          "네",
          "아니요"
        ]
      },
      {
        "id": "police_report_number",
        "label": "경찰 사고 보고서 번호는 무엇인가요?",
        "type": "text",
        "conditional_on": "police_responded"
      },
      {
        "id": "fault_party_cited",
        "label": "가해자가 경찰로부터 인용(티켓/경고 등)을 받았나요?",
        "type": "radio",
        "options": [
          "네",
          "아니요",
          "잘 모름"
        ]
      },
      {
        "id": "vehicle_damaged",
        "label": "차량이 파손되었나요?",
        "type": "radio",
        "options": [
          "네",
          "아니오"
        ]
      },
      {
        "id": "has_photos",
        "label": "차량 또는 사고 현장 사진이 있으신가요?",
        "type": "radio",
        "options": [
          "네",
          "아니오"
        ]
      },
      {
        "id": "has_health_insurance",
        "label": "건강보험이 있으신가요?",
        "type": "radio",
        "options": [
          "네",
          "아니요"
        ]
      },
      {
        "id": "health_insurance_provider",
        "label": "어떤 건강보험을 가지고 계신가요?",
        "type": "text",
        "conditional_on": "has_health_insurance"
      },
      {
        "id": "health_insurance_policy_number",
        "label": "건강보험 폴리시 번호는 무엇인가요?",
        "type": "text",
        "conditional_on": "has_health_insurance"
      },
      {
        "id": "additional_notes",
        "label": "기타 알려주고 싶은 내용이 있나요?",
        "type": "textarea"
      },
      {
        "id": "legal_disclaimer_agreement",
        "label": "본 양식을 제출하는 것은 변호사-의뢰인 관계를 형성하지 않는다는 것을 이해합니다.",
        "type": "checkbox",
        "options": [
          "동의합니다"
        ],
        "required": true
      }
    ]
  }